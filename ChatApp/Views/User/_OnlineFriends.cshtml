@model List<ChatApp.Models.UserModel>
@{
    Layout = null;
}
@if (Model != null)
{
    if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            string Name = item.FirstName +' ' + item.LastName;
            string name = Name.IndexOf(" ") > 0 ? Name.Substring(0, Name.IndexOf(" ")) : Name;
            <a href="javascript:;" data-user-id="@item.UserID" class="list-group-item chat-user">
                <img src="@item.ProfilePicture" class="profilePictureCircle" />&nbsp;&nbsp;&nbsp;@Name
                @*<i class="fa fa-circle pull-right online-circle"></i>*@
            </a>
        }
    }
    else
    {
        <span>No Friends Found</span>
    }
}